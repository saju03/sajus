<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Add a User</h2>


              {{#if exist}}
              <p>
                this user email is already exists
              </p>
              {{/if}}
              <form action="/admin/add-user" method="post">

                <div class="form-outline">
                      <label class="form-label"  for="form3Example1">User name</label>
                      <input type="text" id="Name" name="name" required class="form-control" onkeyup="validateName()" />
                      <span id="name" class="text-danger"></span>

                    </div>

                <div class="form-outline">
                      <label class="form-label"  for="form3Example2">Email</label>
                      <input type="email" id="Email" required name="email" class="form-control" onkeyup="validEmail()"/>
                      <span id="email" class="text-danger"></span>
                    </div>

               <div class="form-outline mb-4">
                  <label class="form-label"  for="form3Example3">Password</label>
                  <input type="password" name="Password" id="Password" required class="form-control" onkeyup="validPassowrd()" />
                  <span id="password" class="text-danger"></span>
                </div>


                  

                <div class="d-flex justify-content-center">
                  <button type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Add</button>
                


    <div class="d-flex justify-content-center">
                 <a href="/admin"class="btn btn-success btn-block btn-lg gradient-custom-3 text-body">back</a> 
                    
                {{!-- <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="#!"
                    class="fw-bold text-body"><u>Login here</u></a></p> --}}

              </form>
</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

