<!-- Section: Design Block -->
<section class="">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
            <span class="text-primary">Register here</span>
          </h1>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-5 px-md-5">
              {{#if exist}}
              <div>
                <p>
                  user already exists
                </p>
              </div>
          {{/if}}

              <form action="/signup" method="post">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label class="form-label"  for="form3Example1">User name</label>
                      <input type="text" id="Name" name="name" required class="form-control" onkeyup="validateName()" />
                      <span id="name" class="text-danger"></span>

                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="form-outline">
                      <label class="form-label"  for="form3Example2">Email</label>
                      <input type="email" id="Email" required name="email" class="form-control" onkeyup="validEmail()"/>
                      <span id="email" class="text-danger"></span>
                    </div>
                  </div>
                </div>

                <!-- Email input -->
                <div class="form-outline mb-4">
                  <label class="form-label"  for="form3Example3">Password</label>
                  <input type="password" name="Password" id="Password" required class="form-control" onkeyup="validPassowrd()" />
                  <span id="password" class="text-danger"></span>
                </div>

 

                <!-- Submit button -->
                <button type="submit" onclick="validation()" class="btn btn-primary btn-block mb-4">
                  Sign up
                </button>


              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->